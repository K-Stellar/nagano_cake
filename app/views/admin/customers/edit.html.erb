<div class="container my-5">
  <div class="row">
    <div class="col">
      <h3><span class="bg-light bg-gradient"><%= @customer.full_name %>さんの会員情報編集</span></h3>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch, local:true, class: "container text-center pl-9" do |f| %>
      <div class="form-group row">
        <label class="col-3">会員ID</label>
        <%= @customer.id %>
      </div>

      <div class="form-group row my-3">
        <label class="col-3">氏名</label>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name, class:'ml-5' %>
      </div>

      <div class="form-group row my-3">
        <label class="col-3">フリガナ</label>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana, class: "ml-5" %>
      </div>

      <div class="form-group row">
        <label class="col-3">郵便番号</label>
        <%= f.text_field :postal_code %>
      </div>

      <div class="form-group row">
        <label class="col-3">住所</label>
        <%= f.text_field :address, class: "w-50" %>
      </div>

      <div class="form-group row">
        <label class="col-3">電話番号</label>
        <%= f.text_field :phone_num %>
      </div>

      <div class="form-group row">
        <label class="col-3">メールアドレス</label>
        <%= f.text_field :email %>
      </div>

      <div class="form-group row">
        <label class="col-3">会員ステータス</label>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効", value: "false", class: "mr-3" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "退会", value: "true" %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
