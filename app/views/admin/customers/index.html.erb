<div class="container">
  <div class="row mt-5">
    <h4 class="mb-3 ml-5">会員一覧</h4>
  </div>
  <div class="row px-5">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to customer.full_name,admin_customer_path(customer.id) %>
           </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_deleted ? '退会' : '有効' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>
</div>