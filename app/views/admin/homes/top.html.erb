<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 col-sm-12 mx-auto">
      <div class="row mb-3">
        <div class="col-12">
          <h4><span class="bg-light bg-gradient">注文一覧</span></h4>
        </div>
      </div>
      <div class="row">
        <table class="table table-borderless border-top mt-3">
          <thead class="bg-light">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to admin_order_path(order.id), class: "text-dark border-bottom border-dark" do %>
                  <%= l order.created_at %>
                  <% end %>
                </td>
                <td><%= order.customer.full_name %></td>
                <td>1</td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>
</div>