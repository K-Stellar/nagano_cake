<div class="container">
  <div class="row justify-content-center">
    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group form-inline">
        <%= f.label :last_name, '(姓)', class: "col-4"%>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-4" %>
      </div>

      <div class="form-group form-inline">
        <%= f.label :first_name, '(名)' %>
        <%= f.text_field :first_name, autocomplete: "first_name", class: "name" %>
      </div>

      <div class="field">
        <%= f.label :last_name_kana, '(セイ)' %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "name" %>
        <%= f.label :first_name_kana, '(メイ)' %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "name" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :postal_code %><br />
        <%= f.text_field :postal_code, autocomplete: "postal_code" %>
      </div>

      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :phone_num %><br />
        <%= f.text_field :phone_num, autocomplete: "phone_num" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
  </div>
</div>
