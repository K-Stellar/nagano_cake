<div class="container my-5">
  <div class="row">
    <div class="col-10">
      <h3 class="mb-5"><span class="bg-light bg-gradient">配送先編集</span></h3>
      <%= render "public/shared/error_messages", resource: @address %>
      <table class="table table-borderless">
        <%= form_with model: @address, url: customers_address_path, method: :patch, local:true do |f| %>
        <tr>
          <td class="w-25"><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td class="w-25"><%= f.label :address, "住所" %></td>
          <td><%= f.text_field :address, class: "w-100" %></td>
        </tr>
        <tr>
          <td class="w-25"><%= f.label :name, "宛名" %></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
        </tr>
        <%end%>
      </table>
    </div>
  </div>
</div>